<!DOCTYPE html>
<html>

<head>
    <title>Categories</title>
</head>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css"
    integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">

<body
    style="font-family: 'Century Gothic'; background-image: linear-gradient(60deg, rgb(121, 0, 250), rgb(255, 166, 0));">

    <div style="display:flex; align-items: center; justify-content: center;">
        logged in as: <%= usrname %>
    </div>
    <div style="display:flex; align-items: center; justify-content: center;">
        <h1>Available Job Categories</h1>
    </div>
    <div style="display:flex; align-items: center; justify-content: center; padding: 60px; padding-top: 25px;">
        <table class="table" style="background-color: rgb(32, 32, 32); color:white;">
            <thead>
                <tr>
                    <th>Category ID</th>
                    <th>Category</th>
                    <th>Apply now</th>
                </tr>
            </thead>
            <tbody style="font-size:small;">
                <% categories.forEach(categories=> {%>
                    <tr>
                        <td>
                            <%= categories.category_id %>
                        </td>
                        <td>
                            <%= categories.job_type %>
                        </td>
                        <td>
                            <form action="/categories" method="post">
                                <input name="category" type="text" value="<%= categories.job_type %>" style="display:none;">
                                <input name="usrname" type="text" value="<%= usrname %>" style="display:none;">
                                <button type="submit" class="btn btn-light" style="font-size:small;">View Openings</button>
                            </form>
                        </td>
            
                        <% }) %>

                    </tr>
            </tbody>
        </table>
</body>

</html>