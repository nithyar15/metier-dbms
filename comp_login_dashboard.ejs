<!DOCTYPE html>
<html>

    <head>
        <title>Dashboard</title>
    </head>
    <link rel="stylesheet" href="css/login_dashboard.css">

    <body>
    <% if (mtype=="error" ) { %>
        <h3 style="color:green">
            <%= message %>
        </h3>
        <a href="company_login">Try logging in again</a> <br><br>
        <a href="company_signup">Sign up if you're new!</a>
        <% } else { %>
            <div class="outer">
                <div class="inner">
                    <ul>
                        <li style="float:right; border-radius: 50px; background-color: rgb(147, 225, 240); color: black;">
                            <% if(person) {%>
                                <%= person.username %>
                                <% } else { %>
                                <%= comp %>
                                <br>
                                <% } %>
                        </li>
                    </ul>
                    <h1>Bienvenue</h1>
                    <% } %>
                    <form action="comp_login_dashboard" method="post">
                        <% if(person) {%>
                            <div class="listings">
                            <input name="comp" type="hidden" value="<%= person.username %>">
                            </div>
                            <% } else { %>
                                <div class="listings">
                                <input name="comp" type="hidden" value="<%= comp %>">
                                <% } %>
                                </div>
                                    <button type="submit">View Applications</button>
                    </form>
                    <br>
                    <a href="addcompany">Create another opening</a>

                    <br>
                    <div class="listings">
                        <a href="company_login">Logout</a>
                    </div>
                </div>
                
            </div>

</body>

</html>