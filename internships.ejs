<!DOCTYPE html>
<html>

<head>
    <title>Internships</title>
</head>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css"
    integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
<body style="font-family: 'Century Gothic'; background-image: linear-gradient(60deg, rgb(121, 0, 250), rgb(255, 166, 0));">
    <center><button onclick="history.back()">Back to All Openings</button></center>
    <div style="display:flex; align-items: center; justify-content: center;">
    Hey <%= usrname %>,
    </div>
    <div style="display:flex; align-items: center; justify-content: center;">
    <h1>INTERNSHIP OPPORTUNITIES</h1>
    </div>
    <h3 style="margin-left: 50px;">RESEARCH INTERNSHIPS</h3>
    <div style="display:flex; align-items: center; justify-content: center; padding: 50px; padding-top: 25px;">
    <table class="table" style="background-color: rgb(32, 32, 32); color:white;">
        <thead>
            <tr>
                <th>University Name</th>
                <th>City</th>
                <th>Apply now</th>
            </tr>
        </thead>
        <tbody style="font-size:small;">
        <% universities.forEach(universities=> {%>
            <tr>
                <td><%= universities.u_name %></td>
                <td><%= universities.city %></td>
                <td>
                    <form action="/internships" method="post">
                        <input name="comp" type="text" value="<%= universities.u_name %>" style="display:none;">
                        <input name="name" type="text" value="<%= usrname %>" style="display:none;">
                        <button type="submit" class="btn btn-light" style="font-size:small;">Apply</button>
                    
                    </form>
                </td>
                        <% }) %>
                    
                
            </tr>
        </tbody>
    </table>
    </div>
    
    <h3 style="margin-left:50px">CORPORATE INTERNSHIPS</h3>
    <div style="display:flex; align-items: center; justify-content: center; padding: 50px; padding-top: 25px;">
        <table class="table" style="background-color: rgb(32, 32, 32); color:white;">
        <thead>
            <tr>
                <th>Company Name</th>
                <th>City</th>
                <th>Apply now</th>
            </tr>
        </thead>
        <tbody style="font-size:small;">
            <% companies.forEach(companies=> {%>
                <tr>
                    <td>
                        <%= companies.c_name %>
                    </td>
                    <td>
                        <%= companies.city %>
                    </td>
                    <td>
                        <td>
                            <form action="/internships" method="post">
                                <input name="comp" type="text" value="<%= companies.c_name %>" style="display:none;">
                                <input name="name" type="text" value="<%= usrname %>" style="display:none;">
                                <button type="submit" class="btn btn-light" style="font-size:small;">Apply</button>
                        
                            </form>
                        </td>
                    </td>
                    <% }) %>
    
    
                </tr>
        </tbody>
    </table>
    </div>
</body>

</html>