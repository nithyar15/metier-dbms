<!DOCTYPE html>
<html>

    <head>
        <title>Internships</title>
    </head>
    <link rel="stylesheet" href="css/fulltime.css">
    <script>
        function submitvals(a) {
            a.getElementsByTagName('form')[0].submit();
        }
    </script>

    <body>
        <ul>
            <li onclick="history.back()">Back</li>
            <li style="float:right; border-radius: 50px; background-color: aliceblue; color: black;">
                <%= usrname %>
            </li>
        </ul>
        <div class="outer">
            <div class="inner">
                <h1>INTERNSHIP OPPORTUNITIES</h1>
                <br>
                <h1>RESEARCH INTERNSHIPS</h1>
                <% universities.forEach(universities=> {%>
                    <div class="listings" onclick="submitvals(this)">
                        <h2>
                            <%= universities.u_name %>
                        </h2>
                        <p>
                            <%= universities.city %>
                        </p>
                        <form action="/fulltime" method="post">
                            <input name="comp" type="hidden" value='<%= universities.u_name %>'>
                            <input name="name" type="hidden" value='<%= usrname %>'>
                        </form>
                    </div>
                    <% }) %>
                    <br>
                    <h1>CORPORATE INTERNSHIPS</h1>
                    <% companies.forEach(companies=> {%>
                        <div class="listings" onclick="submitvals(this)">
                            <h2>
                                <%= companies.c_name %>
                            </h2>
                            <p>
                                <%= companies.city %>
                            </p>
                            <form action="/fulltime" method="post">
                                <input name="comp" type="hidden" value='<%= companies.c_name %>'>
                                <input name="name" type="hidden" value='<%= usrname %>'>
                            </form>
                        </div>
                        <% }) %>
            </div>
        </div>
    </body>

</html>